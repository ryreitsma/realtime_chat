<div id="messages" data-ng-controller="MessagesController" data-messages='<%= render template: 'messages/messages.rabl', collection: @messages %>'>
<%= form_tag write_message_url, id: 'message_form'  do%>
  <%= content_tag :fieldset do %> 
		<%= label_tag :content, "Schrijf een bericht" %>
		<%= text_area_tag :content, nil, rows: 4 %>
		<%= submit_tag "Versturen", class: "btn btn-primary" %> 
  <% end %> 
<% end %>

  <div class="row" data-ng-repeat="message in messages">
		<div class="span4">
		  <div class="row">
				<div class="span1">
					<img data-ng-src="{{ message.user.avatar_url}}" alt="avatar"/>
				</div>  
				<div class="span2">{{ message.user.name }} </div>
			</div>
		</div>
		<div class="span6">{{ message.content }}</div>
	</div>
</div>
  
